        int age = scan.nextInt();
        scan.nextLine();
        
        System.out.println("성별을 입력하세요.(남자/여자)");
        String gender = scan.nextLine();
        scan.nextLine();
        
        System.out.println("전화번호를 입력하세요: ");
        String phone = scan.nextLine();
        
        String reservation = "이름: "+name+", 나이: "+age+", 성별: "+gender+", 전화번호: "+phone;
        
		
	}
